<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
      </div>
      <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
	  </div><br>
      <%= f.submit "Sign in" %>
    <% end %>

<p>If you is a new user? then press =>> <%= link_to "Sign up now!", signup_path %></p>
