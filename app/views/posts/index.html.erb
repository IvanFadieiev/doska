<p id="notice"><%= notice %></p>
<center>
<h1>Listing Post</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Poster</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post.each do |post| %>
      <tr>
        <td><strong><%= post.user.user%></strong></td>
        <td><%= post.poster %></td>
        <td><%= post.body %></td>
        </tr>
    <% end %>
  </tbody>
 </table>
  <%= link_to current_user.user, current_user %>
  </center>
