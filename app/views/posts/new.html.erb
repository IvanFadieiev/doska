<center><h2>Add a post:</h2>
<%= form_for([@user, @user.posts.build]) do |f| %>
    <div class="field">
    <%= f.label :poster %><br />
    <%= f.text_field :poster %>
    </div>
    <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
    </div>
    <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', current_user%>
</center>